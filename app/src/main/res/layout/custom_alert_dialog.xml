<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:rotation="90">

    <TextView
        android:id="@+id/tv_titie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="說明"
        android:textColor="#3ECD44"
        android:textSize="36sp" />


    <TextView
        android:id="@+id/tv_mess"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@+id/tv_titie"
        android:gravity="center_vertical"
        android:lineSpacingExtra="10sp"
        android:text="請先標註球場關鍵點,依序為左上、右上、左下、右下"
        android:textAlignment="center"
        android:textColor="#878686"
        android:textSize="28sp" />

    <Button
        android:id="@+id/bottom_confirm"
        android:layout_width="162dp"
        android:layout_height="60dp"
        android:background="#3ECD44"
        android:text="瞭解"
        android:textColor="#ffffff"
        android:textColorHighlight="#3ECD44"
        android:textSize="28sp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" />


</LinearLayout>